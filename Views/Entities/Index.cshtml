@model TerrariaDB.ViewModels.Terraria.Entity.EntityIndexViewModel

@{
    ViewData["Title"] = "Entities";
}

<h1>Entities</h1>

<div>
    <a asp-action="Index">Back</a>
</div>

<div>
    <table>
        @foreach (var entity in Model.Entities)
        {
            <tr>
                <td>
                    <div style="display: flex; flex-direction: column;">
                        <img src="@entity.Sprite" alt="@entity.Name" />
                        <span>@entity.Name</span>
                    </div>
                </td>
                <td>
                    <div style="display: flex; flex-direction: row;">
                        <a asp-action="Details" asp-route-id="@entity.Id">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@entity.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@entity.Id">Delete</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
