@model TerrariaDB.ViewModels.Terraria.TownNpc.TownNpcEditViewModel

@{
    ViewData["Title"] = "Edit Town NPC";
}

<h1>Edit Town NPC</h1>

<a asp-action="Index">Back</a>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TownNpcId" />

    <div>
        <div>
            <label>Name:</label>
            <input asp-for="Name" type="text" maxlength="50" required />
        </div>
    </div>

    <div>
        <div>
            <label>Description:</label>
            <input asp-for="Description" type="text" maxlength="200" />
        </div>
    </div>

    <div>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 4; i++)
            {
                <div class="town-stage" data-stage="@i">
                    <div>
                        <label>Sprite:</label>
                        <input asp-for="Stages[i].Sprite" type="text" maxlength="500" required="@(i == 0)" value="" />
                    </div>
                    <div>
                        <label>HP:</label>
                        <input asp-for="Stages[i].Hp" type="number" value="250" />
                    </div>
                    <div>
                        <label>Defense:</label>
                        <input asp-for="Stages[i].Defense" type="number" value="15" />
                    </div>
                    <div>
                        <label>Game ID:</label>
                        <input asp-for="Stages[i].EntityId" type="number" min="-500" max="1000" value="0" />
                    </div>
                </div>
            }
        </div>
    </div>

    <div>
        <label>Drop</label>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 5; i++)
            {
                <div class="town-drop" data-index="@i">
                    <select asp-for="Drops[i].ItemId" asp-items="Model.AvailableItems"></select>
                    <input asp-for="Drops[i].Quantity" type="number" min="1" max="100" value="1" />
                    <button type="button" class="clear-town-drop" data-index="@i">Clear</button>
                </div>
            }
        </div>
    </div>

    <div>
        <label>Trades</label>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 15; i++)
            {
                <div class="town-trade" data-index="@i">
                    <select asp-for="Trades[i].ItemId" asp-items="Model.AvailableItems"></select>
                    <input asp-for="Trades[i].Quantity" type="number" min="1" max="50" value="1" />
                    <select asp-for="Trades[i].TradeType" asp-items="Model.AvailableTradeTypes" required></select>
                    <button type="button" class="clear-town-trade" data-index="@i">Clear</button>
                </div>
            }
        </div>
    </div>

    <button type="submit">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.querySelectorAll('.clear-town-drop').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const index = this.getAttribute('data-index');
                const dropDiv = document.querySelector(`.town-drop[data-index="${index}"]`);

                const select = dropDiv.querySelector('select');
                const input = dropDiv.querySelector('input[type="number"]');

                if (select) select.selectedIndex = 0;
                if (input) input.value = input.getAttribute('value') || '1';
            });
        });

        document.querySelectorAll('.clear-town-trade').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const index = this.getAttribute('data-index');
                const tradeDiv = document.querySelector(`.town-trade[data-index="${index}"]`);

                const selects = tradeDiv.querySelectorAll('select');
                const input = tradeDiv.querySelector('input[type="number"]');

                selects.forEach(select => select.selectedIndex = 0);
                if (input) input.value = input.getAttribute('value') || '1';
            });
        });
    </script>
}
