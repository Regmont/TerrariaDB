@model TerrariaDB.ViewModels.Terraria.TownNpc.TownNpcCreateViewModel

<h1>Create Town NPC</h1>

<a asp-action="Index">Back</a>

<form asp-action="Create" method="post">
    <div>
        <div>
            <label>Name:</label>
            <input asp-for="Name" type="text" maxlength="50" required />
        </div>
    </div>

    <div>
        <div>
            <label>Description:</label>
            <input asp-for="Description" type="text" maxlength="200" />
        </div>
    </div>

    <div>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 4; i++)
            {
                <div>
                    <div>
                        <label>Sprite:</label>
                        <input asp-for="Stages[i].Sprite" type="text" maxlength="500" />
                    </div>
                    <div>
                        <label>HP:</label>
                        <input asp-for="Stages[i].Hp" type="number" value="250" />
                    </div>
                    <div>
                        <label>Defense:</label>
                        <input asp-for="Stages[i].Defense" type="number" value="15" />
                    </div>
                    <div>
                        <label>Game ID:</label>
                        <input asp-for="Stages[i].EntityId" type="number" min="-500" max="1000" />
                    </div>
                </div>
            }
        </div>
    </div>

    <div>
        <label>Drop</label>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 5; i++)
            {
                <div>
                    <select asp-for="Drops[i].ItemId" asp-items="Model.AvailableItems"></select>
                    <input asp-for="Drops[i].Quantity" type="number" min="1" max="100" />
                    <button type="button">Clear</button>
                </div>
            }
        </div>
    </div>

    <div>
        <label>Trades</label>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 15; i++)
            {
                <div>
                    <select asp-for="Trades[i].ItemId" asp-items="Model.AvailableItems"></select>
                    <input asp-for="Trades[i].Quantity" type="number" min="1" max="50" />
                    <select asp-for="Trades[i].TradeType" asp-items="Model.AvailableTradeTypes" required></select>
                    <button type="button">Clear</button>
                </div>
            }
        </div>
    </div>

    <button type="submit">Save</button>
</form>
