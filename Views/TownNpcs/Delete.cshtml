@model TerrariaDB.ViewModels.Terraria.TownNpc.TownNpcDeleteViewModel

@{
    ViewData["Title"] = "Delete NPC";
}

<h1>Delete NPC</h1>

<a asp-action="Index">Back</a>

<div>
    <div>
        <div style="display: flex; flex-direction: column;">
            <img src="@Model.Sprite" alt="@Model.Name" />
            <span>@Model.Name</span>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TownNpcId" />
        <button type="submit">Confirm</button>
    </form>
</div>
