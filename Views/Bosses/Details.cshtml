@model TerrariaDB.ViewModels.Terraria.Boss.BossEditViewModel

@{
    ViewData["Title"] = "Edit Boss";
}

<h1>Edit Boss</h1>

<a asp-action="Index">Back</a>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OriginalBossName" />

    <div>
        <div>
            <label>Name:</label>
            <input asp-for="BossName" type="text" maxlength="50" required />
        </div>
    </div>

    <div>
        <div>
            <label>Summon Item:</label>
            <select asp-for="SummonItemId" asp-items="Model.AvailableItems"></select>
        </div>
    </div>

    <div>
        <label>Boss Drop</label>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 15; i++)
            {
                <div>
                    <select asp-for="BossDrops[i].ItemId" asp-items="Model.AvailableItems"></select>
                    <input asp-for="BossDrops[i].Quantity" type="number" min="1" max="150" value="1" />
                    <button type="button" class="clear-boss-drop" data-index="@i">Clear</button>
                </div>
            }
        </div>
    </div>

    <div>
        <label>Boss Parts</label>
        <div style="display: flex; flex-direction: column;">
            @for (int i = 0; i < 5; i++)
            {
                <div class="boss-part" data-part="@i">
                    <div>
                        <div>
                            <label>Part Name:</label>
                            <input asp-for="BossParts[i].PartName" type="text" maxlength="50" required="@(i == 0)" />
                        </div>
                        <div>
                            <label>Description:</label>
                            <input asp-for="BossParts[i].Description" type="text" maxlength="200" />
                        </div>
                        <div>
                            <label>Quantity:</label>
                            <input asp-for="BossParts[i].Quantity" type="number" min="1" max="50" value="1" />
                        </div>
                    </div>

                    <div style="display: flex; flex-direction: row;">
                        @for (int j = 0; j < 2; j++)
                        {
                            <div class="boss-stage" data-part="@i" data-stage="@j">
                                <div>
                                    <label>Sprite:</label>
                                    <input asp-for="BossParts[i].Stages[j].Sprite" type="text" maxlength="500" required="@(j == 0)" />
                                </div>
                                <div>
                                    <label>HP:</label>
                                    <input asp-for="BossParts[i].Stages[j].Hp" type="number" min="0" max="150000" value="0" />
                                </div>
                                <div>
                                    <label>Defense:</label>
                                    <input asp-for="BossParts[i].Stages[j].Defense" type="number" min="0" max="100" value="0" />
                                </div>
                                <div>
                                    <label>Game ID:</label>
                                    <input asp-for="BossParts[i].Stages[j].EntityId" type="number" min="-500" max="1000" value="0" />
                                </div>
                                <div>
                                    <label>Contact Damage:</label>
                                    <input asp-for="BossParts[i].Stages[j].ContactDamage" type="number" min="0" max="500" value="0" />
                                </div>

                                <div>
                                    <label>Spawn Enemies</label>
                                    <div style="display: flex; flex-direction: row;">
                                        @for (int k = 0; k < 3; k++)
                                        {
                                            <div class="spawned-enemy" data-part="@i" data-stage="@j" data-enemy="@k">
                                                <select asp-for="BossParts[i].Stages[j].SpawnedEnemies[k].EnemyId" asp-items="Model.AvailableEnemies"></select>
                                                <input asp-for="BossParts[i].Stages[j].SpawnedEnemies[k].Quantity" type="number" min="1" max="50" value="1" />
                                                <button type="button" class="clear-spawned-enemy" data-part="@i" data-stage="@j" data-enemy="@k">Clear</button>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div>
                                    <label>Drop</label>
                                    <div style="display: flex; flex-direction: row;">
                                        @for (int k = 0; k < 3; k++)
                                        {
                                            <div class="stage-drop" data-part="@i" data-stage="@j" data-drop="@k">
                                                <select asp-for="BossParts[i].Stages[j].Drops[k].ItemId" asp-items="Model.AvailableItems"></select>
                                                <input asp-for="BossParts[i].Stages[j].Drops[k].Quantity" type="number" min="1" max="50" value="1" />
                                                <button type="button" class="clear-stage-drop" data-part="@i" data-stage="@j" data-drop="@k">Clear</button>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <button type="button" class="clear-stage" data-part="@i" data-stage="@j">Clear Stage</button>
                            </div>
                        }
                    </div>

                    <button type="button" class="clear-part" data-part="@i">Clear Part</button>
                </div>
            }
        </div>
    </div>

    <button type="submit">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.querySelectorAll('.clear-boss-drop').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const dropDiv = this.closest('div');
                const select = dropDiv.querySelector('select');
                const input = dropDiv.querySelector('input[type="number"]');

                if (select) select.selectedIndex = 0;
                if (input) input.value = input.getAttribute('value') || '1';
            });
        });

        document.querySelectorAll('.clear-spawned-enemy').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const enemyDiv = this.closest('.spawned-enemy');
                const select = enemyDiv.querySelector('select');
                const input = enemyDiv.querySelector('input[type="number"]');

                if (select) select.selectedIndex = 0;
                if (input) input.value = input.getAttribute('value') || '1';
            });
        });

        document.querySelectorAll('.clear-stage-drop').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const dropDiv = this.closest('.stage-drop');
                const select = dropDiv.querySelector('select');
                const input = dropDiv.querySelector('input[type="number"]');

                if (select) select.selectedIndex = 0;
                if (input) input.value = input.getAttribute('value') || '1';
            });
        });

        document.querySelectorAll('.clear-stage').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const part = this.getAttribute('data-part');
                const stage = this.getAttribute('data-stage');
                const stageDiv = document.querySelector(`.boss-stage[data-part="${part}"][data-stage="${stage}"]`);

                const inputs = stageDiv.querySelectorAll('input');
                const selects = stageDiv.querySelectorAll('select');

                inputs.forEach(input => {
                    input.value = input.getAttribute('value') || '';
                });

                selects.forEach(select => {
                    select.selectedIndex = 0;
                });
            });
        });

        document.querySelectorAll('.clear-part').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const part = this.getAttribute('data-part');
                const partDiv = document.querySelector(`.boss-part[data-part="${part}"]`);

                const inputs = partDiv.querySelectorAll('input');
                const selects = partDiv.querySelectorAll('select');

                inputs.forEach(input => {
                    input.value = input.getAttribute('value') || '';
                });

                selects.forEach(select => {
                    select.selectedIndex = 0;
                });
            });
        });
    </script>
}
