@model TerrariaDB.ViewModels.Terraria.Boss.BossIndexViewModel

@{
    ViewData["Title"] = "Bosses";
}

<h1>Bosses</h1>

<div>
    <a asp-action="Index">Back</a>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create">Create</a>
    }
</div>

<div>
    <table>
        @foreach (var boss in Model.Bosses)
        {
            <tr>
                <td>
                    <div style="display: flex; flex-direction: column;">
                        <img src="@boss.Sprite" alt="@boss.Name" />
                        <span>@boss.Name</span>
                    </div>
                </td>
                <td>
                    <div style="display: flex; flex-direction: row;">
                        <a asp-action="Details" asp-route-id="@boss.Id">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@boss.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@boss.Id">Delete</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
