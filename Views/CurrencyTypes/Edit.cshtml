@model TerrariaDB.ViewModels.Terraria.CurrencyType.CurrencyTypeEditViewModel

@{
    ViewData["Title"] = "Edit Currency Type";
}

<h1>Edit Currency Type</h1>

<a asp-action="Index">Back</a>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OriginalCurrencyName" />

    <div>
        <div>
            <label>Name:</label>
            <input asp-for="CurrencyName" type="text" required />
        </div>
    </div>

    <button type="submit">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
