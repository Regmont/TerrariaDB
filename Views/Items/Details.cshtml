@model TerrariaDB.ViewModels.Terraria.Item.ItemEditViewModel

@{
    ViewData["Title"] = "Edit Item";
}

<h1>Edit Item</h1>

<a asp-action="Index">Back</a>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ItemId" />

    <div>
        <div>
            <label>Name:</label>
            <input asp-for="Name" type="text" maxlength="50" required />
        </div>
    </div>

    <div>
        <div>
            <label>Description:</label>
            <input asp-for="Description" type="text" maxlength="200" />
        </div>
    </div>

    <div>
        <div>
            <label>Base price:</label>
            <input asp-for="BasePrice" type="number" min="0" max="500000000" value="0" />
        </div>
    </div>

    <div>
        <div>
            <label>Currency Type:</label>
            <select asp-for="CurrencyName" asp-items="Model.AvailableCurrencies" required></select>
        </div>
    </div>

    <div>
        <div>
            <label>Crafting station:</label>
            <select asp-for="CraftingStationName" asp-items="Model.AvailableCraftingStations"></select>
        </div>
    </div>

    <div>
        <label>Stages:</label>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 4; i++)
            {
                <select asp-for="StageItemIds[i]" asp-items="Model.AvailableItems" required="@(i == 0)"></select>
            }
        </div>
    </div>

    <button type="submit">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
