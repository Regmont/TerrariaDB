@model TerrariaDB.ViewModels.Terraria.CraftingStation.CraftingStationIndexViewModel

@{
    ViewData["Title"] = "Crafting Stations";
}

<h1>Crafting Stations</h1>

<div>
    <a asp-action="Index" asp-controller="Home">Back</a>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create">Create</a>
    }
</div>

<div>
    <table>
        @foreach (var station in Model.CraftingStations)
        {
            <tr>
                <td>
                    <div style="display: flex; flex-direction: column;">
                        <img src="@station.Sprite"/>
                        <span>@station.Name</span>
                    </div>
                </td>
                <td>
                    <div style="display: flex; flex-direction: row;">
                        <a asp-action="Details" asp-route-id="@station.Name">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@station.Name">Edit</a>
                            <a asp-action="Delete" asp-route-id="@station.Name">Delete</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
