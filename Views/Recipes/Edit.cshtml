@model TerrariaDB.ViewModels.Terraria.Recipe.RecipeEditViewModel

@{
    ViewData["Title"] = "Edit Recipe";
}

<h1>Edit Recipe</h1>

<a asp-action="Index">Back</a>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RecipeId" />

    <div>
        <div>
            <label>Result Item:</label>
            <select asp-for="ResultItemId" asp-items="Model.AvailableItems" required></select>
        </div>
    </div>

    <div>
        <div>
            <label>Result quantity:</label>
            <input asp-for="ResultItemQuantity" type="number" min="1" max="100" required />
        </div>
    </div>

    <div>
        <div>
            <label>Crafting Station:</label>
            <select asp-for="CraftingStationName" asp-items="Model.AvailableCraftingStations"></select>
        </div>
    </div>

    <div>
        <label>Ingredients</label>
        <div style="display: flex; flex-direction: row;">
            @for (int i = 0; i < 8; i++)
            {
                <div class="ingredient-item" data-index="@i">
                    <select asp-for="Ingredients[i].ItemId" asp-items="Model.AvailableItems" required="@(i == 0)"></select>
                    <input asp-for="Ingredients[i].Quantity" type="number" min="1" max="10000" required="@(i == 0)" />
                    <button type="button" class="clear-ingredient" data-index="@i">Clear</button>
                </div>
            }
        </div>
    </div>

    <button type="submit">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.querySelectorAll('.clear-ingredient').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const index = this.getAttribute('data-index');
                const ingredientDiv = document.querySelector(`.ingredient-item[data-index="${index}"]`);

                const select = ingredientDiv.querySelector('select');
                const input = ingredientDiv.querySelector('input[type="number"]');

                if (select) select.selectedIndex = 0;
                if (input) input.value = input.getAttribute('value') || '1';
            });
        });
    </script>
}
